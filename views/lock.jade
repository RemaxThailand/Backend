doctype html
html(lang='en')
	head
		title #{__('Sign in')} | #{config.systemName}
		meta(charset='utf-8')
		meta(content='width=device-width, initial-scale=1, maximum-scale=1, user-scalable=no', name='viewport')
		link(rel='stylesheet', href='//src.remaxthailand.co.th/libs/bootstrap/3.3.5/css/bootstrap.min.css')
		link(rel='stylesheet', href='//src.remaxthailand.co.th/libs/font-awesome/4.4.0/css/font-awesome.min.css')
		link(rel='stylesheet', href='//src.remaxthailand.co.th/libs/adminlte/2.3.0/css/AdminLTE.thai.min.css')
		link(rel='stylesheet', href='/stylesheets/lock.css')
		link(rel='shortcut icon', href='favicon.ico', type='image/x-icon')
		link(rel='icon', href='favicon.ico', type='image/x-icon')

	body.hold-transition.lockscreen.colorful
		.lockscreen-wrapper
			.lockscreen-name John Doe
			.lockscreen-item
				.lockscreen-image
					img(src='//src.remaxthailand.co.th/libs/adminlte/latest/img/user1-128x128.jpg', alt='User Image')
				form.lockscreen-credentials
					.input-group
						input.form-control(type='password', placeholder='password')
						.input-group-btn
							button.btn(type='button')
								i.fa.fa-arrow-right.text-muted
			.help-block.text-center
				| Enter your password to retrieve your session
			.text-center
				a(href='login.html') Or sign in as a different user
								

		script(src='//src.remaxthailand.co.th/libs/jquery/2.1.4/jquery.min.js')
		script(src='//src.remaxthailand.co.th/libs/js-cookie/2.0.3/js.cookie.min.js')
		script(src='//src.remaxthailand.co.th/libs/bootstrap/3.3.5/js/bootstrap.min.js')
		script(src='//src.remaxthailand.co.th/libs/adminlte/latest/js/app.min.js')
		script(src='/javascripts/common.js')